{
  "name": "playground",
  "version": "1.0.0",
  "main": "index.js",
  "license": "UNLICENSED",
  "scripts": {
    "c": "yarn clean",
    "clean": "rm -rf js build && tsc --build --clean",
    "b": "yarn build",
    "build": "npm-run-all --serial build:ts build:webpack",
    "build:ts": "tsc --build",
    "build:webpack": "yarn webpack --config webpack.config.js",
    "s": "yarn serve",
    "serve": "prpl-server --root build --host 0.0.0.0 --port 8080",
    "d": "npm-run-all --serial build dev-server",
    "dev-server": "es-dev-server --port 8081 --node-resolve --preserve-symlinks --app-index index.html --compatibility none --open",
    "w": "yarn watch",
    "watch": "npm-run-all --parallel \"dev-server --watch\" \"build:ts --watch --preserveWatchOutput\"",
    "fu": "yarn full-upgrade",
    "full-upgrade": "yarn upgrade-interactive --latest",
    "lint": "yarn lint:eslint",
    "lint:fix": "yarn lint:eslint --fix",
    "lint:eslint": "eslint \"package/**/*.ts\"",
    "lint:lit": "lit-analyzer \"package/**/*.ts\" --strict",
    "lerna-publish": "yarn build && lerna publish",
    "r-nms": "yarn remove-node-modules",
    "remove-node-modules": "rm -rf package/**/node_modules"
  },
  "devDependencies": {
    "browserify": "^16.5.2",
    "del-cli": "^3.0.0",
    "es-dev-server": "^1.57.0",
    "npm-run-all": "^4.1.5",
    "ts-loader": "^8.0.3",
    "typescript": "^4.0.2",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12"
  },
  "dependencies": {
    "@pazh/demo": "^0.12.0",
    "@pazh/element": "^0.12.9",
    "dotenv": "^8.2.0",
    "lit-element": "^2.4.0",
    "tslib": "^2.0.1",
    "webcomponents-loader": "^1.0.1"
  }
}
